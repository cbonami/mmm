<?xml version="1.0" encoding="UTF-8"?>
<!-- $Id$ -->
<content-model>
  <!-- system flag in fields does not make any sense: if the class is system,
    all fields are system -->
  <class id="0" name="Object" system="true" extendable="false">
    <field name="id" type="Id" final="true" read-only="true"/>
    <!-- name is read-only, the name can only be changed with move 
    via the repository -->
    <field name="name" type="String" read-only="true" final="true"/>
    <field name="contentClass" type="Link[ContentClass]" read-only="true"
      final="true"/>
    <class id="1" name="ReflectionObject" system="true" extendable="false">
      <field name="modifiers" type="Modifiers" read-only="true"/>
      <class id ="2" name="Class" system="true" final="true">
        <field name="superClass" type="Link[Class]" final="true" read-only="true"/>
        <field name="subClasses" type="LinkList[Class]" final="true"
          read-only="true"/>
        <field name="fields" type="LinkList[Field]" final="true" read-only="true"/>
      </class>
      <class id="3" name="Field" system="true" final="true">
        <field name="fieldType" type="Type" read-only="true"/>
        <field name="superField" type="Link[Field]" read-only="true" transient="true"/>
        <field name="constraint" type="ValueValidator" read-only="true"/>
      </class>
    </class>
    <class id="100" name="Resource" system="true">
      <field name="parent" type="Link[Folder]" system="true" final="true"/>
      <field name="children" type="LinkList[Folder]" system="true" final="true"/>
      <field name="path" type="String" system="true" final="true" transient="true"/>
    </class>
  </class>
</content-model>