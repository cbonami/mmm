  <bean id="net.sf.mmm.content.parser.api.ContentParserService" class="net.sf.mmm.content.parser.impl.ContentParserServiceImpl">
    <property name="maximumBufferSize"><value>1048576</value></property>
    <property name="alias2keyMap">
