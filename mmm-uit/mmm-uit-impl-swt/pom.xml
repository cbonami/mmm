<?xml version="1.0" encoding="UTF-8"?>
<!-- $Id$ -->
<project>
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>net.sf.mmm</groupId>
    <artifactId>mmm-uit</artifactId>
    <version>0.9.0</version>
  </parent>
  <artifactId>mmm-uit-impl-swt</artifactId>
  <version>0.9.0-SNAPSHOT</version>
  <packaging>jar</packaging>
  <name>uit-impl-swt</name>
  <description>Implementation of the UI-Toolkit API using SWT as the native toolkit</description>

  <profiles>
    <profile>
      <id>linux</id>
      <activation>
        <os>
          <name>linux</name>
        </os>
      </activation>
      <properties>
        <swt.variant>linux-gtk</swt.variant>
      </properties>
    </profile>
    <profile>
      <id>windows</id>
      <activation>
        <os>
          <family>windows</family>
        </os>
      </activation>
      <properties>
        <swt.variant>win32</swt.variant>
      </properties>
    </profile>
    <profile>
      <!-- TODO -->
      <id>mac</id>
      <activation>
        <os>
          <family>mac</family>
        </os>
      </activation>
      <properties>
        <swt.variant>mac</swt.variant>
      </properties>
    </profile>
  </profiles>
  <dependencies>
    <dependency>
      <groupId>net.sf.mmm</groupId>
      <artifactId>mmm-uit-api</artifactId>
      <version>0.9.0-SNAPSHOT</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.eclipse.swt</groupId>
      <artifactId>swt-${swt.variant}</artifactId>
      <version>${swt.version}</version>
      <scope>compile</scope>
    </dependency>
  </dependencies>
  <properties>
    <swt.version>3.3</swt.version>
    <swt.variant>_swt.variant_undefined</swt.variant>
  </properties>
</project>