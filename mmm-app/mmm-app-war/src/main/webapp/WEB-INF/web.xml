<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
  version="2.5" xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- spring-web DispatcherServlet -->
  <servlet>
    <servlet-name>beans-service</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <!-- map DispatcherServlet to all service calls -->
  <servlet-mapping>
    <servlet-name>beans-service</servlet-name>
    <url-pattern>/mmm_client_demo/service/*</url-pattern>
  </servlet-mapping>

  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>Mmm_client_demo.html</welcome-file>
  </welcome-file-list>

</web-app>
